{
  "extends": [
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [{
    "files": ["works/*.mdx"],
    "extends": ["plugin:mdx/recommended"],
    "settings": {
      "mdx/code-blocks": true
    },
    "rules": {
      "react/jsx-no-undef": "off"
    }
  }]
}